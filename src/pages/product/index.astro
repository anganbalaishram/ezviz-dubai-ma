  overflow: hidden;
  padding: 0.75rem 2rem;
  border-radius: 8px;
  font-weight: 600;
  font-size: clamp(0.875rem, 2vw, 1rem);
  text-align: center;
  transition: all 0.3s ease;
  display: inline-flex;
