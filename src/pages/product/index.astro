/* Enhanced Responsive Hero Banner */
.hero-banner {
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  position: relative;
  overflow: hidden;
  width: 100vw;
  margin-left: calc(50% - 50vw);
  display: flex;
  align-items: center;
  /* Responsive height using viewport units */
  min-height: 60vh; /* Mobile: 60% of viewport height */
}

/* Tablet landscape and up */
@media (min-width: 768px) {
  .hero-banner {
    min-height: 70vh; /* Tablet: 70% of viewport height */
  }
}

/* Desktop */
@media (min-width: 1024px) {
  .hero-banner {
    min-height: 80vh; /* Desktop: 80% of viewport height */
  }
}

/* Large desktop */
@media (min-width: 1440px) {
  .hero-banner {
    min-height: 600px; /* Cap maximum height */
  }
}

/* Enhanced Background Image with better responsiveness */
.hero-banner::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('https://images.unsplash.com/photo-1557804506-669a67965ba0?w=1920&h=1080&fit=crop');
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  background-attachment: fixed; /* Parallax effect on desktop */
  opacity: 0.15;
  animation: float 6s ease-in-out infinite;
  transform: scale(1.1); /* Slight zoom to prevent edge gaps */
}

/* Disable parallax on mobile for better performance */
@media (max-width: 768px) {
  .hero-banner::before {
    background-attachment: scroll;
    opacity: 0.12; /* Slightly reduced for mobile readability */
    transform: scale(1.05);
  }
}

/* Responsive Grid Container */
.hero-banner .hero-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
  align-items: center;
  padding: 2rem 0;
  width: 100%;
  max-width: 1280px;
  margin: 0 auto;
  position: relative;
  z-index: 10;
}

/* Tablet and up - two columns */
@media (min-width: 1024px) {
  .hero-banner .hero-grid {
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    padding: 4rem 0;
  }
}

/* Hero Content Responsive Typography */
.hero-content h1 {
  font-size: clamp(2rem, 5vw, 4rem); /* Fluid typography */
  font-weight: 700;
  line-height: 1.1;
  margin-bottom: 1rem;
  color: white;
}

.hero-content .highlight {
  color: #60a5fa;
  display: inline-block;
  animation: glow 2s ease-in-out infinite alternate;
}

.hero-content p {
  font-size: clamp(1rem, 2.5vw, 1.25rem);
  line-height: 1.6;
  color: #cbd5e1;
  margin-bottom: 2rem;
  max-width: 90%;
}

@media (min-width: 768px) {
  .hero-content p {
    max-width: 85%;
  }
}

@media (min-width: 1024px) {
  .hero-content p {
    max-width: 80%;
  }
}

/* Responsive Button Container */
.hero-buttons {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-bottom: 2rem;
}

@media (min-width: 640px) {
  .hero-buttons {
    flex-direction: row;
    gap: 1rem;
  }
}

/* Enhanced Responsive Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rem;
  margin-top: 2rem;
}

@media (min-width: 640px) {
  .stats-grid {
    gap: 1.5rem;
    max-width: 500px;
  }
}

@media (min-width: 1024px) {
  .stats-grid {
    max-width: 600px;
  }
}

.stat-item {
  text-align: center;
  padding: 1rem 0.5rem;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.stat-item:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(-4px) scale(1.02);
}

.stat-number {
  font-size: clamp(1.25rem, 3vw, 1.75rem);
  font-weight: 700;
  color: #60a5fa;
  margin-bottom: 0.5rem;
  display: block;
}

.stat-label {
  font-size: clamp(0.75rem, 2vw, 0.875rem);
  color: #cbd5e1;
  line-height: 1.4;
}

/* Enhanced Hero Image - Only visible on desktop */
