---
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.css";
import Whatsapp from "../../components/Whatsapp";

const title = "Product Categories | Surveillance Solutions";
const description =
  "Explore our comprehensive range of surveillance solutions including Wire-Free Cameras, Outdoor Wi-Fi Cameras and Indoor Wi-Fi Cameras .";
const canonicalURL = new URL("/product", Astro.site);
const categories = [
  {
    title: "Wifi-Free Cameras",
    description:
      "Uniview provides affordable, high-quality IP cameras with smart analytics and performance",
    imageUrl: "/images/produccat/Wififree.png",
    href: "/categories/wireFree",
    icon: "video",
  },
  {
    title: "Outdoor Wi-Fi Cameras",
    description:
      "Uniview's analog cameras offer high-definition video, easy maintenance, and affordability.",
    imageUrl: "/images/produccat/Outdoor.png",
    href: "/categories/outdoorcamera",
    icon: "camera",
  },
  {
    title: "Indoor Wi-Fi Cameras",
    description:
      "Uniview's PTZ cameras offer wide coverage, zoom, and robust stability",
    imageUrl: "/images/produccat/Indoor.png",
    href: "/categories/indoorcamera",
    icon: "rotate-cw",
  },
];
const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": title,
  "description": description,
  "url": canonicalURL.toString(),
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": Astro.site.toString(),
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Categories",
        "item": canonicalURL.toString(),
      },
    ],
  },
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": categories.map((category, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "Product",
        "name": category.title,
        "description": category.description,
        "url": new URL(category.href, Astro.site).toString(),
        "image": new URL(category.imageUrl, Astro.site).toString(),
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.5",
          "reviewCount": "24",
        },
        "review": {
          "@type": "Review",
          "reviewRating": {
            "@type": "Rating",
            "ratingValue": "5",
            "bestRating": "5",
          },
          "author": {
            "@type": "Person",
            "name": "Jane Smith",
          },
          "reviewBody": "Excellent quality and reliable product.",
        },
      },
    })),
  },
};

---
<meta charset="UTF-8" />
<style>
  /* Enhanced Animations */
  @keyframes fadeInUp {
    from {
      transform: translateY(50px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideInLeft {
    from {
      transform: translateX(-50px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideInRight {
    from {
      transform: translateX(50px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes scaleIn {
    from {
      transform: scale(0.8);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes glow {
    0%, 100% {
      box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
    }
    50% {
      box-shadow: 0 0 30px rgba(59, 130, 246, 0.5);
    }
  }

  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  @keyframes typewriter {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes blink {
    0%, 50% {
      opacity: 1;
    }
    51%, 100% {
      opacity: 0;
    }
  }

  /* Animation Classes */
  .category-item {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  .category-item:nth-child(1) {
    animation-delay: 0.1s;
  }

  .category-item:nth-child(2) {
    animation-delay: 0.3s;
  }

  .category-item:nth-child(3) {
    animation-delay: 0.5s;
  }

  .hero-content {
    animation: slideInLeft 1s ease-out forwards;
  }

  .hero-image {
    animation: slideInRight 1s ease-out forwards;
    animation-delay: 0.3s;
    opacity: 0;
  }

  .stat-item {
    animation: scaleIn 0.6s ease-out forwards;
    opacity: 0;
  }

  .stat-item:nth-child(1) {
    animation-delay: 0.8s;
  }

  .stat-item:nth-child(2) {
    animation-delay: 1s;
  }

  .stat-item:nth-child(3) {
    animation-delay: 1.2s;
  }

  .section-title {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }

  .section-subtitle {
    animation: fadeInUp 0.8s ease-out forwards;
    animation-delay: 0.2s;
    opacity: 0;
  }

  /* Fixed Hero Banner - Full Width with No White Space */
  .hero-banner {
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
    position: relative;
    overflow: hidden;
    min-height: 500px;
    display: flex;
    align-items: center;
    width: 100vw;
    margin-left: calc(50% - 50vw);
  }

  .hero-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('https://images.unsplash.com/photo-1557804506-669a67965ba0?w=1920&h=1080&fit=crop') center/cover;
    opacity: 0.15;
    animation: float 6s ease-in-out infinite;
  }

  /* Enhanced Card Animations */
  .category-card {
    background: #ffffff;
    border-radius: 12px;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .category-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 30px 60px -12px rgba(59, 130, 246, 0.4);
    border-color: rgba(59, 130, 246, 0.5);
    animation: glow 2s ease-in-out infinite;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6, #1d4ed8, #3b82f6);
    background-size: 200% 100%;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.6s ease;
  }

  .category-card:hover::before {
    transform: scaleX(1);
    animation: shimmer 2s ease-in-out infinite;
  }

  .image-container {
    position: relative;
    overflow: hidden;
    background: #f8fafc;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 15px;
  }

  .image-container img {
  max-height: 100%;
  max-width: 100%;
  object-fit: contain;
  transition: transform 0.3s ease;
}
  .icon-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .category-card:hover .icon-badge {
    transform: scale(1.2) rotate(10deg);
    background: #3b82f6;
    animation: bounce 1s ease-in-out infinite;
  }

  .category-card:hover .icon-badge svg {
    color: white;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 1.5rem;
    max-width: 600px;
  }

  .stat-item {
    text-align: center;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    backdrop-filter: blur(10px);
  }

  .stat-item:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-8px) scale(1.05);
    animation: float 2s ease-in-out infinite;
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    filter: brightness(0.95);
    border-radius: 8px;
  }

  .category-card:hover .product-image {
    transform: scale(1.1) rotate(2deg);
    filter: brightness(1.1) saturate(1.2);
  }

  /* Hero Image Container - Full Coverage */
  .hero-image-container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 450px;
    overflow: hidden;
    border-radius: 16px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4);
    border: 2px solid rgba(255, 255, 255, 0.1);
  }

  .hero-main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    filter: brightness(1.1) contrast(1.1);
  }

  .hero-image:hover .hero-main-image {
    transform: scale(1.05);
    filter: brightness(1.2) contrast(1.2) saturate(1.1);
  }

  .professional-badge {
    position: absolute;
    bottom: -8px;
    right: -8px;
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    padding: 12px 20px;
    border-radius: 12px;
    font-weight: 700;
    font-size: 14px;
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
    transform: translateY(0);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .hero-image:hover .professional-badge {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 12px 35px rgba(59, 130, 246, 0.6);
  }

  /* Button Animations */
  .animated-button {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .animated-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s ease;
  }

  .animated-button:hover::before {
    left: 100%;
  }

  .animated-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }

  /* Floating Elements */
  .floating-element {
    animation: float 3s ease-in-out infinite;
  }

  .floating-element:nth-child(odd) {
    animation-delay: -1.5s;
  }

  /* Typing Effect for Main Title */

  /* Prevent horizontal overflow */
  body {
    overflow-x: hidden;
  }

  /* Enhanced Help Section */
  .help-section {
    position: relative;
    overflow: hidden;
  }

  .help-section::before {
    content: '';
    position: absolute;
    right: -80px;
    top: -80px;
    width: 256px;
    height: 256px;
    border-radius: 50%;
    background: #3b82f6;
    opacity: 0.1;
    animation: float 4s ease-in-out infinite;
  }

  .help-section::after {
    content: '';
    position: absolute;
    left: -20px;
    bottom: -20px;
    width: 256px;
    height: 256px;
    border-radius: 50%;
    background: #6366f1;
    opacity: 0.1;
    animation: float 4s ease-in-out infinite reverse;
  }

  /* Scroll-triggered animations */
  @keyframes slideInFromLeft {
    from {
      transform: translateX(-100px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }
</style>

