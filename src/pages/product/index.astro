import Layout from "../../layouts/Layout.astro";
import "../../styles/global.css";
import Whatsapp from "../../components/Whatsapp";

const title = "Product Categories | Surveillance Solutions";
const description =
  "Explore our comprehensive range of surveillance solutions including Wire-Free Cameras, Outdoor Wi-Fi Cameras and Indoor Wi-Fi Cameras .";
const canonicalURL = new URL("/product", Astro.site);
const categories = [
  {
    title: "Wifi-Free Cameras",
    description:
      "Uniview provides affordable, high-quality IP cameras with smart analytics and performance",
    imageUrl: "/images/produccat/Wififree.png",
    href: "/categories/wireFree",
    icon: "video",
  },
  {
    title: "Outdoor Wi-Fi Cameras",
    description:
      "Uniview's analog cameras offer high-definition video, easy maintenance, and affordability.",
    imageUrl: "/images/produccat/Outdoor.png",
    href: "/categories/outdoorcamera",
    icon: "camera",
  },
  {
    title: "Indoor Wi-Fi Cameras",
    description:
      "Uniview's PTZ cameras offer wide coverage, zoom, and robust stability",
    imageUrl: "/images/produccat/Indoor.png",
    href: "/categories/indoorcamera",
    icon: "rotate-cw",
  },
];
const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": title,
  "description": description,
  "url": canonicalURL.toString(),
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": Astro.site.toString(),
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Categories",
        "item": canonicalURL.toString(),
      },
    ],
  },
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": categories.map((category, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "Product",
        "name": category.title,
        "description": category.description,
        "url": new URL(category.href, Astro.site).toString(),
        "image": new URL(category.imageUrl, Astro.site).toString(),
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.5",
          "reviewCount": "24",
        },
        "review": {
          "@type": "Review",
          "reviewRating": {
            "@type": "Rating",
            "ratingValue": "5",
            "bestRating": "5",
          },
          "author": {
            "@type": "Person",
            "name": "Jane Smith",
          },
          "reviewBody": "Excellent quality and reliable product.",
        },
      },
    })),
  },
};

